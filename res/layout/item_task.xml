<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    	<TextView 
        android:id="@+id/item_task_name"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        />
    	
    	<LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="25dp"    
    	>
	    	<TextView 
	        android:id="@+id/item_tomato_number"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="25dp"
	        android:gravity="center"
	        />
	    	<TextView 
	        android:id="@+id/item_tomato_time"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="25dp"
	        android:gravity="center"
	        />
	    	<TextView 
	        android:id="@+id/item_rest_time"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="25dp"
	        android:gravity="center"
	        /> 
    	    
    	</LinearLayout>

    	<LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="60dp"    
    	>
	    	<Button 
	        android:id="@+id/item_task_begin"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="50dp"
	        android:layout_gravity="center"
	        android:gravity="center"
			android:text="开始"
	        />
	    	<Button 
	        android:id="@+id/item_task_update"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="50dp"
	        android:layout_gravity="center"
	        android:gravity="center"
			android:text="更新"
	        />
	    	<Button 
	        android:id="@+id/item_task_delete"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="50dp"
	        android:layout_gravity="center"
	        android:gravity="center"
			android:text="删除"
	        /> 
    	    
    	</LinearLayout>
    	
</LinearLayout>
